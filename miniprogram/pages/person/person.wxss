/* pages/person/person.wxss */
.user-info {
  margin: 30rpx;
  height: 300rpx;
  border-bottom: 1px rgb(250, 250, 250) solid;
  border-radius: 10rpx;
  overflow: hidden;

  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-info image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 60rpx;

}

.user-info button {
  margin: 0;
  margin-top: 20rpx;
}

.user-info text {
  margin-top: 20rpx;
  font-weight: bold;
  font-size: 35rpx;

}

.name {
  width: 50%;
  margin-left: 45%;
}

.button2 {
  width: 35%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-right: 40px;
  float: right;
}

.button1 {
  width: 35%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 40px;
  float: left;
}

.thisbutton {
  width: 100%;
  height: 130px;
}

.pername {
  width: 30%;
  margin-top: 20px;
  margin-left: 10px;
  color: #000;
}

.message {
  font-size: 12px;
  width: 20%;
  color: #000;
  margin-top: 0%;
  margin-left: 30px;
}

.avs {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 50rpx;
}

.username {
  margin-top: 20rpx;
  font-weight: bold;
  font-size: 35rpx;
}