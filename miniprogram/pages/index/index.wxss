.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.row {
  padding: 10rpx 50rpx;
  border-bottom: 1px solid #ccc;
  flex: auto;
  border-radius: 10%;
  width: 590rpx;
  height: 100%rpx;
  margin-right: 4%;
  margin-left: 4%;
  margin-top: 7%;
  background-color: rgb(238, 238, 238);
}

.row .name {
  color: rgb(223, 126, 82);
  font-size: medium;
}

.row .code {
  color: black;
  font-size: large;
}

.row .content {
  font-size: large;
}

.notknow {
  padding: 20rpx;
}

.group {
  display: flex;
}

.avatar {
  overflow: hidden;
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.avatar .icon {

  position: absolute;

  height: 74rpx;

  width: 74rpx;

  border-radius: 50%;

  border: 50rpx solid #f1f1f1;

}

.content {
  font-size: 20rpx;
}

.code {
  font-size: 20rpx;
}

.weui-input {
  font-size: 25rpx;
  margin-left: 20rpx;
  left: 74rpx;
  margin-top: 3%;
}




.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.swiper1 {
  margin: 10rpx;
  height: 300rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.swiper1 image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden;

}

.person image {
  width: 100%;
  height: 200rpx;

}

.guanjianci {
  margin: 10rpx;
  border-radius: 20rpx;
  overflow: hidden;

}

.blockdd {
  flex: auto;
  border-radius: 10%;
  width: 92%;
  height: 460px;
  margin-right: 4%;
  margin-left: 4%;
  margin-top: 7%;
  background-color: rgb(225, 228, 225);
}

.getblock image {
  margin-left: 20px;
  width: 25%;
  height: 100px;

}

.user-group {
  display: flex;
  margin-top: 10rpx;
}

.username {
  font-size: 28rpx;
}

.detail-info {
  font-size: 24rpx;
  color: #665566;
  display: flex;
}

.time {
  margin-right: 20rpx;
}

.a {
  width: 64rpx;
  height: 64rpx;
}

.b {
  width: 64rpx;
  height: 64rpx;
}

.I_image image {
  padding-top: 20rpx;
  display: flex;
  justify-content: space-between;
}

.right-info {
  flex: 1;
  margin-left: 20rpx;
  /* display: flex; */
  flex-direction: column;
  justify-content: space-between;
}

.publishInfo {
  padding: 1px;
  padding-top: 5px;
  border-radius: 10px;
  background-color: #F5F5F5;
}

.coursecode {
  font-size: 12px;
  color: #A9A9A9;
  border: 1px solid #A9A9A9;
  background-color: white;
  border-radius: 5px;
  padding: 3px;
}

.userpicture {
  border-radius: 7px;
}